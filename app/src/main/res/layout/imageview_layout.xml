<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#225555"
        android:src="@drawable/cat" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#885555"
        android:src="@drawable/white_rose" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/btn_center"
                android:layout_height="match_parent"
                android:text="CENTER" />

            <Button
                android:id="@+id/btn_center_crop"
                android:layout_height="match_parent"
                android:text="CENTER CROP" />

            <Button
                android:id="@+id/btn_center_inside"
                android:layout_height="match_parent"
                android:text="CENTER INSIDE" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_fit_center"
                android:layout_height="match_parent"
                android:text="FIT CENTER" />

            <Button
                android:id="@+id/btn_fit_start"
                android:layout_height="match_parent"
                android:text="FIT START" />

            <Button
                android:id="@+id/btn_fit_xy"
                android:layout_height="match_parent"
                android:text="FIT XY" />
        </TableRow>
    </TableLayout>
</LinearLayout>